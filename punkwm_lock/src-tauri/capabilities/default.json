{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-focus",
    "fs:allow-read",
    "fs:allow-read-file",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "/**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "/**" }]
    }
  ]
}
